{
  "$schema": "https://raw.githubusercontent.com/steeltoeoss-incubator/steeltoe-schema/master/schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Management": {
    "Endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": ["bus-refresh"]
        }
      }
    }
  }
}
